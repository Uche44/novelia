# Environment variables for local development
# Copy this to .env and fill in your values

# Django settings
SECRET_KEY=your-secret-key-here-change-this
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (leave empty for SQLite in development)
DATABASE_URL=

# CORS (add your frontend URLs)
CORS_ALLOWED_ORIGINS=http://localhost:5500,http://127.0.0.1:5500

# CSRF Trusted Origins (required for Django 4.0+)
CSRF_TRUSTED_ORIGINS=http://localhost:5500,http://127.0.0.1:5500

# Cloudinary (for production media files)
# Sign up at https://cloudinary.com/ and get these from your dashboard
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# For production on Render, you'll set these in the Render dashboard:
# SECRET_KEY=<generate-a-strong-secret-key>
# DEBUG=False
# ALLOWED_HOSTS=your-app-name.onrender.com
# DATABASE_URL=<automatically-set-by-render-postgresql>
# CORS_ALLOWED_ORIGINS=https://your-frontend-vercel-app.vercel.app
# CLOUDINARY_CLOUD_NAME=<your-cloud-name>
# CLOUDINARY_API_KEY=<your-api-key>
# CLOUDINARY_API_SECRET=<your-api-secret>
# CSRF_TRUSTED_ORIGINS=https://novelia.onrender.com,https://your-frontend-vercel-app.vercel.app
